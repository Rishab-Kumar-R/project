                    <div class="mb-1 sm:mb-2">
                      <label for="inputState" class="form-label"><b>Select your Gender</b></label>
                      <select id="inputState" name="gender" class="form-select" placeholder="Gender">
                        <option>Male</option>
                        <option>Female</option>
                        <option>Others</option>
                      </select>
                    </div>


                    <div class="mb-1 sm:mb-2 py-3">
                      <label for="inputState" class="form-label"><b>Select Your Role</b></label>
                      <select id="inputState" class="form-select" name="role" placeholder="Gender">
